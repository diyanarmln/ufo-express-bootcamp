<%- include('header', {title: `Sighting Report #${index+1}`}); -%>

<div class="container" style="padding-top: 20px">
  <h1>Sighting Report #<% const number = Number(index)+1 %><%= number %></h1>
  <br />

  <div>
    <div class="btn-group mr-2" role="group" aria-label="First group">
      <a
        class="btn btn-primary"
        href="/sighting/<%= index %>/edit"
        role="button"
        >Edit</a
      >
    </div>
    <div class="btn-group mr-2" role="group" aria-label="Second group">
      <form
        action="/sighting/<%= index %>?_method=DELETE"
        method="POST"
        onclick="return confirm('Are you sure you want to delete this item?');"
      >
        <button class="btn btn-danger" type="submit">Delete</button>
      </form>
    </div>
  </div>
  <br />
  <p>
    <span style="font-weight: bold">Date & Time (UTC):</span>
    <span><%= date %> <%= time %></span>
  </p>
  <p>
    <span style="font-weight: bold">Duration:</span>
    <span><%= duration %></span>
  </p>
  <p>
    <span style="font-weight: bold">Location:</span>
    <span><%= city %>, <%= state %></span>
  </p>
  <p>
    <span style="font-weight: bold">Type:</span>
    <span><%= shape %></span>
  </p>
  <p>
    <span style="font-weight: bold">Summary:</span>
    <br />
    <span><%= summary %></span>
  </p>
  <p>
    <span style="font-weight: bold">Details:</span>
    <br />
    <span><%= text %></span>
  </p>
  <br />
  <p>
    <span style="font-weight: bold; font-size: small">Submitted on:</span>
    <br />
    <span style="font-size: small"><%= creationDate %></span>
  </p>
  <br />

  <a class="btn btn-secondary" href="/" role="button">Back</a>
</div>

<%- include('footer'); -%>
